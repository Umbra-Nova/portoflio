{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["@playwright/test", "node"]
  },
  "include": [
    "tests/**/*.ts",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
